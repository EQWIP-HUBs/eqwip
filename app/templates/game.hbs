{{#if gameOverManGameOver}}
{{game-over
  character=character
  cash=cash
  income=income
  environment=environment
  assets=assets
  debt=debt
  resilience=resilience
  assetsArray=assetsArray
}}

{{else}}
 {{#if introShown}}
    <div class="container">
      <div class="score-drawer-container">
        {{score-drawer
            character=character
            month=month
            answers=answers
            cash=cash
            income=income
            environment=environment
            assets=assets
            debt=debt
            resilience=resilience
        }}
      </div>

      <div class="container-columns">
        {{question-space character=character month=month answerQuestion=(action "answerQuestion") setImpact=(action "setImpact")}}
      </div>
    </div>
  {{else}}
    <div class="flexBlock u-padding">
      <div class="row collapse">
        <div class="small-12 medium-8 columns">
          {{character-intro character=character}}
          <div class="button button--green u-marginBottom u-marginTop" {{action 'startGameClicked'}}>
           Continue
         </div>
        </div>
      </div>
    </div>
  {{/if}}
{{/if}}
