{{#if gameOverManGameOver}}
  {{game-over
    character=character
    cash=cash
    income=income
    environment=environment
    assets=assets
    debt=debt
    resilience=resilience
    assetsArray=assetsArray
  }}
{{else}}
 {{#if introShown}}
    <div class="flexBlock">
      <div class="sidebar flexBlock flexBlock--noGrow flexBlock--noShrink">
        {{score-drawer
            character=character
            month=month
            answers=answers
            cash=cash
            income=income
            environment=environment
            assets=assets
            debt=debt
            resilience=resilience
        }}
      </div>

      <div class="flexBlock flexVertical">
        <div class="flexBlock flexBlock--noGrow flexBlock--noShrink header">
          <div class="flexContent">
            <h3 class="u-marginBottomNone u-textRight">
              From Startup to Sustainability
            </h3>
          </div>

        </div>
        <div class="flexBlock">
          <div class="storyContainer">
            {{question-space character=character month=month answerQuestion=(action "answerQuestion") setImpact=(action "setImpact")}}
          </div>
        </div>
      </div>
    </div>
  {{else}}
    <div class="flexBlock u-padding">
      <div class="row collapse fadeUp">
        <div class="small-12 medium-8 columns">
          {{character-intro character=character}}
          <div class="button button--green u-marginBottom u-marginTop" {{action 'startGameClicked'}}>
           Continue
         </div>
        </div>
        <div class="small-12 medium-4 columns u-textCenter">
          <div class="avatar avatar--zara avatar--large u-marginTop"></div>
        </div>
      </div>
    </div>
  {{/if}}
{{/if}}
